<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:maxWidth="@dimen/drawer_header_drawable_width"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/drawer_header_drawable_width"
        android:layout_height="@dimen/drawer_header_drawable_height"
        android:contentDescription="@string/drawer_header_content_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drawer_header_background" />

    <ImageView
        android:id="@+id/navigation_drawer_header_imageView_icon"
        android:layout_width="@dimen/navigation_drawer_header_icon_width"
        android:layout_height="@dimen/navigation_drawer_header_height"
        android:layout_marginLeft="@dimen/navigation_drawer_header_margin_start"
        android:layout_marginTop="@dimen/navigation_drawer_header_margin_top"
        android:contentDescription="@string/drawer_header_content_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/navigation_drawer_header_subtitle_height"
        android:layout_marginLeft="@dimen/navigation_drawer_header_subtitle_margin_start"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_drawer_header_imageView_icon"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/navigation_drawer_header_textView_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/drawerHeaderText"
            android:textSize="@dimen/navigation_drawer_header_text_size"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/navigation_drawer_header_textView_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/email"
            android:textColor="@color/drawerHeaderText"
            android:textSize="@dimen/navigation_drawer_header_text_size"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>